<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="307dp"
        android:layout_height="144dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="44dp" />

    <EditText
        android:id="@+id/editText_surname"
        android:layout_width="310dp"
        android:layout_height="148dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Surname"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="233dp" />

    <EditText
        android:id="@+id/editText_Marks"
        android:layout_width="320dp"
        android:layout_height="137dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Marks"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="438dp" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="185dp"
        android:layout_height="98dp"
        android:text="Add Data"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="686dp" />

    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="145dp"
        android:layout_height="101dp"
        android:text="ViewAll"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="812dp" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="151dp"
        android:layout_height="104dp"
        android:text="Update"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="944dp" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="297dp"
        android:layout_height="140dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="id"
        tools:layout_editor_absoluteX="463dp"
        tools:layout_editor_absoluteY="44dp" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="154dp"
        android:layout_height="107dp"
        android:text="Delete Data"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="1083dp" />

</androidx.constraintlayout.widget.ConstraintLayout>